{{!-- {{yield}} --}}
<div id='nav'  >
<div class="ui vertical menu">
  <a class="active teal item">
    Delivered
    <div class="ui teal pointing left label">{{numberOfDeliveredGroup}} / {{groupsOfParcel.length}}/ {{cardParcel.length}}</div>
  </a>
  <div class="ui dropdown item scrolling">
    Customers <i class="dropdown icon "></i>
    <div class="menu">
      {{!-- <div class="item">Choice 1</div> --}}
       {{#each groupsOfParcel as |group index|}}
        <div class="item" {{action 'groupTapped' group index}} >{{index}}:{{group.title}}</div>
        {{/each}}
    </div>
  </div>
  <div class="item">
    <div class="ui transparent icon input">
      <input type="text" placeholder="Search Name...">
      <i class="search icon"></i>
    </div>
  </div>
</div>

<div class="ui cards">

   {{#each cardParcel as |parcel index|}}

  <div class="card">
    <div class="content">
      {{!-- <img class="right floated mini ui image" src="/images/avatar/large/elliot.jpg"> --}}
      <div class="header">
        {{parcel.name}}
      </div>
      <div class="meta">
        {{parcel.invoicenumber}}
      </div>
      <div class="description">
        {{parcel.addr1}}  {{parcel.addr2}}
      </div>
    </div>
    <div class="extra content">
      <div class="ui two buttons">
        {{#if parcel.isDelivered}}
          <div class="ui basic red button" {{action 'cardUndo' parcel}}>Undo</div>
        {{else}}
          <div class="ui basic green button"  {{action 'cardConfirmed' parcel}} >Confirm</div>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>

