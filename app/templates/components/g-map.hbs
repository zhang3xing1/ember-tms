</div>
{{!-- nav --}}

{{!-- cards on left --}}
<div id="cards" class="ui cards">

   {{#each cardParcel as |parcel index|}}

  <div class="card" id="card-{{index}}">
    <div class="content">
      <div class="header">
        {{parcel.name}}
        <span class="right floated " {{action 'hideCard' index}}><i class="remove icon"></i></span>
      </div>
      <div class="meta">
        {{parcel.invoicenumber}}
      </div>
      <div class="description">
        {{parcel.addr1}}  {{parcel.addr2}}
      </div>
    </div>
    <div class="extra content">
      <div class="ui two buttons">
        {{#if parcel.isDelivered}}
          <div class="ui basic red button" {{action 'cardUndo' parcel}}>Cancle</div>
        {{else}}
          <div class="ui basic green button"  {{action 'cardConfirmed' parcel}} >Confirm</div>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{!-- cards on left --}}



{{!-- content --}}
<div class="modal-content">
    <div class='modal-container'>
    <div class="header"><h3>Territory<span class="modal-btn-close" {{action 'hideCard' index}}><i class="remove icon"></i></span></h3></div>
    <table class="ui celled table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Territory</th>
        <th>Postal Code</th>
      </tr>
    </thead>
    <tbody>

    {{#each territoryCollection as |territory index|}}

           {{#each territory.zipCollection as |zip index_|}}
            <tr onclick={{action 'zoneCellTapped' zip index_ true}}>
              <td>{{index_}}</td>
              <td class="negative">{{territory.name}}</td>
              <td>{{zip.name}}</td>
            </tr>
            {{/each}}

    {{/each}}


    </tbody>
  </table>
    </div>
</div>




