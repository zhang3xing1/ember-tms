{{!-- {{yield}} --}}
<div id='nav'  >
<div class="ui vertical menu">
  <a class="active teal item">
    Delivered
    <div class="ui teal pointing left label">{{numberOfDeliveredGroup}} / {{groupsOfPackage.length}}</div>
  </a>
  <div class="ui dropdown item scrolling">
    Customers <i class="dropdown icon "></i>
    <div class="menu">
      {{!-- <div class="item">Choice 1</div> --}}
       {{#each groupsOfPackage as |loc index|}}
        <div class="item" {{action 'panTest' loc index}} >{{index}}:{{loc.title}}</div>
        {{/each}}
    </div>
  </div>
  <div class="item">
    <div class="ui transparent icon input">
      <input type="text" placeholder="Search Name...">
      <i class="search icon"></i>
    </div>
  </div>
</div>

<div class="ui cards">
   {{#each nextGroupOfPackage as |package index|}}

  <div class="card">
    <div class="content">
      {{!-- <img class="right floated mini ui image" src="/images/avatar/large/elliot.jpg"> --}}
      <div class="header">
        {{package.name}}
      </div>
      <div class="meta">
        {{package.invoicenumber}}
      </div>
      <div class="description">
        {{package.addr1}}  {{package.addr2}}
      </div>
    </div>
    <div class="extra content">
      <div class="ui two buttons">
        <div class="ui basic green button">Confirm</div>
        <div class="ui basic red button">Undo</div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{!-- <h3 {{action 'hello' hiMap}}>Hi, this is  {{hiMap}} </h3> --}}



</div>